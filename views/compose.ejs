<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Compose</title>
</head>
<style>
    body {
        background-color: #f4f4f4;
        font-family: Arial, sans-serif;
        margin: 0;
        height: calc(100vh - 110px);
        justify-content: center;
        align-items: center;
    }

    .main {
        display: flex;
    }

    .compose {
        background-color: #ffffff;
        padding: 30px 50px;
        flex-grow: 1;
        border-radius: 32px;
    }

    form {
        display: flex;
        flex-direction: column;
    }
    
    .compose #composeForm {
        padding: 16px;
    }

    label {
        padding-bottom: 16px;
        padding-right: 8px;
    }

    .compose #composeForm .recipient {
        display: flex;
        align-items: center;
        padding-bottom: 4px;
    }

    .compose #composeForm .recipient select {
        margin-bottom: 16px;
        padding: 8px;
        border-radius: 4px;
        border: 1px solid #dad5d5;
    }

    .compose #composeForm input[type="text"] {
        width: 100%;
        margin-bottom: 16px;
        padding: 8px;
        font-family: Arial, sans-serif;
        font-size: 15px;
        border-radius: 4px;
        border: 1px solid #dad5d5;
    }

    .compose #composeForm textarea {
        height: 140px;
        width: 100%;
        margin-bottom: 16px;
        padding: 8px;
        font-family: Arial, sans-serif;
        font-size: 15px;
        border-radius: 4px;
        border: 1px solid #dad5d5;
    }

    .compose #composeForm .attach input[type="file"] {
        margin-bottom: 16px;
        padding: 8px;
        font-family: Arial, sans-serif;
        font-size: 15px;
        border-radius: 4px;
        border: 1px solid #dad5d5;
    }

    button {
        padding: 12px;
        background-color: #d3d3d3c7;
        cursor: pointer;
        color: #2b2929;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    button:hover {
        background-color: #d3d3d3;
        box-shadow: 0 2px 5px rgba(54, 54, 54, 0.5);
    }
</style>
<body>
    <%- include('header'); -%>
    <div class="main">
        <%- include('navbar'); -%>
        <div class="compose">
            <h1>New message</h1>
            <form id="composeForm" action="" method="POST" enctype="multipart/form-data">
                <div class="recipient">
                    <label>To:</label>
                    <select id="recipient" name="recipient" required>
                        <option value="" selected disabled>Select recipient</option>
                        <% otherUsers.forEach(user => { %>
                            <option value="<%= user.id %>"><%= user.name %></option>
                        <% }); %>
                    </select>
                </div>
                <input type="text" id="subject" name="subject" placeholder="Subject">
                <textarea id="body" name="body" placeholder="Your content goes here..."></textarea>
                <button type="submit">Send</button>
            </form>
            <% if (typeof success !== 'undefined') { %>
                <span style="color: green; font-size: 20px;">
                    <%= success %>
                </span>
            <% } %>
        </div>
    </div>
</body>
</html>